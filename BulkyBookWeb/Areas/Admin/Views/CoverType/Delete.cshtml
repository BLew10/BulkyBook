@model CoverType

@{
	ViewData["Title"] = "Delete Cover Type";
}

<h1>Delete</h1>

<form method="post" asp-action="DeletePost">
	<input asp-for="Id" type="hidden"  />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Category</h2>
		</div>
		<div class="mb-3">
			<label asp-for="Name" class="form-label"></label>
			<input asp-for="Name" class="form-control" disabled type="text" />
		</div>
		<div class="mb-3">
			<button type="submit" class="btn btn-danger"> Delete</button>
			<a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width:150px">Cancel</a>
		</div>
	</div>
</form>



@section Scripts {
	@{
	<partial name="_ValidationScriptsPartial" />
	}
}